<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_alignParentStart="true"
  android:layout_alignParentTop="true">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/overall_content_tv"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:gravity="center_horizontal"
      android:text="@string/content"
      android:textSize="22sp"/>

    <RatingBar
      android:id="@+id/overall_content_rb"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/overall_content_tv"
      android:layout_centerHorizontal="true"
      android:numStars="5"
      android:stepSize="1"/>

    <TextView
      android:id="@+id/overall_language_tv"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_below="@id/overall_content_rb"
      android:gravity="center_horizontal"
      android:text="@string/language"
      android:textSize="22sp"/>

    <RatingBar
      android:id="@+id/overall_language_rb"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/overall_language_tv"
      android:layout_centerHorizontal="true"
      android:numStars="5"
      android:stepSize="1"/>

    <TextView
      android:id="@+id/overall_visual_tv"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_below="@id/overall_language_rb"
      android:gravity="center_horizontal"
      android:text="@string/visual"
      android:textSize="22sp"/>

    <RatingBar
      android:id="@+id/overall_visual_rb"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/overall_visual_tv"

      android:layout_centerHorizontal="true"
      android:numStars="5"
      android:stepSize="1"/>

    <TextView
      android:id="@+id/overall_clarity_tv"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_below="@id/overall_visual_rb"
      android:gravity="center_horizontal"
      android:text="@string/clarity"
      android:textSize="22sp"/>

    <RatingBar
      android:id="@+id/overall_clarity_rb"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/overall_clarity_tv"
      android:layout_centerHorizontal="true"
      android:numStars="5"
      android:stepSize="1"/>

    <TextView
      android:id="@+id/overall_brevity_tv"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_below="@id/overall_clarity_rb"
      android:gravity="center_horizontal"
      android:text="@string/brevity"
      android:textSize="22sp"/>

    <RatingBar
      android:id="@+id/overall_brevity_rb"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/overall_brevity_tv"
      android:layout_centerHorizontal="true"
      android:numStars="5"
      android:stepSize="1"/>

    <Button
      android:id="@+id/test"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/colorAccent"
      android:layout_below="@id/overall_brevity_rb"
      android:layout_alignParentBottom="true"
      android:layout_margin="5dp"
      android:text="@string/overall_bt"
      android:textSize="20sp"
      android:textColor="@color/whiteColor"
      android:onClick="overallSubmit"/>

  </RelativeLayout>
</ScrollView>