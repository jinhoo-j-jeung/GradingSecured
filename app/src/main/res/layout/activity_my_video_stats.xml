<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/stats_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="fill_vertical"
        android:layout_weight="1"
        android:visibility="visible" />

    <android.widget.RelativeLayout
        android:id="@+id/stats_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp">


        <android.widget.TextView
            android:id="@+id/summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summary"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"></android.widget.TextView>

        <LinearLayout
            android:id="@+id/categories"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/summary"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Clarity"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Visual"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Language"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="18dp"
                android:text="Brevity"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>

        <android.widget.LinearLayout
            android:id="@+id/scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_below="@+id/summary"
            android:outlineSpotShadowColor="@color/colorPrimary"
          >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="3.7/5"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="4.1/5"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="2.5/5"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="4.4/5"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textSize="18dp"
                android:text="4.5/5"/>

        </android.widget.LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Common"
            android:text="Common Feedback"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_below="@id/categories"
            android:layout_marginTop="10dp"/>

        <android.support.v7.widget.GridLayout
            app:columnCount="3"
            app:rowCount="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/Common"
            android:layout_centerHorizontal="true"
            >


            <TextView
              android:text="Comment"
              android:layout_width="90dp"
              android:gravity="center"
              android:textColor="@color/colorPrimaryDark"
              />
            <TextView
              android:text="Reviewers"
              android:layout_width="90dp"
              android:gravity="center"
              android:textColor="@color/colorPrimaryDark"
              />
            <TextView
              android:text="Time"
              android:layout_width="90dp"
              android:gravity="center"
              android:textColor="@color/colorPrimaryDark"
              />

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="Too Fast"
                android:textColor="@android:color/white"
                android:textStyle="bold" />


            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="3 out of 4"
                android:textColor="@android:color/white"
                android:textStyle="bold" />


            <Button
              android:id="@+id/time_button1"
              android:text="2:10"
              />

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="Unclear"
                android:textColor="@android:color/white"
                android:textStyle="bold" />


            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="3 out of 4"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
              android:id="@+id/time_button2"
              android:text="4:20"

              />

        </android.support.v7.widget.GridLayout>

    </android.widget.RelativeLayout>

</LinearLayout>